{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">Il y a eu un problème pour valider votre requête de changement de mot de passe. Le lien envoyé par mail a expiré. Réessayer.</div>
	{% endfor %}
	<section class="container">
		<h1 class="text-center">Réinitialiser votre mot de passe</h1>
		{{ form_start(requestForm, {attr: {class: 'form-width'}}) }}
		{{ form_errors(requestForm) }}
		<div class="form-group">
			{{ form_row(requestForm.email) }}
		</div>
		<div class="text-center">
			<small>
				Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
			</small>
		</div>
		<div class="form-label-input text-center">
			<button type="submit" class="button button-update">Envoyer l'email de vérification</button>
		</div>
		{{ form_end(requestForm) }}
	</section>
	<div class="form-label-input text-center">
		<a href="{{ path('app_profile_index') }}" class="button button-red">Retour a mon compte</a>
	</div>
{% endblock %}

