{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1>
        App frontend
    </h1>
    <div class="container">
			<h1 class="text-center">Laisser un avis</h1>
			{{ form_start(form, {attr: {class: 'form-width'}}) }}

			{{ form_errors(form) }}
			<div class="form-group">
				{{ form_row(form.firstname) }}
			</div>
			<div class="form-group">
				{{ form_row(form.lastname) }}
			</div>
            <div class="form-group">
				{{ form_row(form.comment) }}
			</div>
            <div class="form-group">
				{{ form_row(form.note) }}
			</div>
            <div class="form-group">
				{{ form_row(form.imageFile) }}
			</div>
			<div class="form-label-input text-center">
				<button type="submit" path="{{ path('app_index') }}" class="button button-red">Commenter</button>
			</div>
			{{ form_end(form) }}
		</div>
{% endblock %}
