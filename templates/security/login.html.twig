{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	Connexion
{% endblock %}

{% block body %}
	<h1 class="text-center mt-4">Connectez-vous</h1>

	<form method="post" class="form-width">
		{% if error %}
			<div class="alert alert-danger-form">Indentifiants incorrects.</div>
		{% endif %}

		<div class="form-group">
			<label for="username">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="exemple@outlook.com">
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required placeholder="********">
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="form-links">
            <p>Vous n'avez pas encore de compte ?</p>
            <p>Créez en un ici ! <a href="{{ path('app_register') }}">Créer un compte</a></p>
        </div>
		<div class="form-label-input text-center">
			<button type="submit" class="button button-red">Se connecter</button>
		</div>
	</form>
{% endblock %}