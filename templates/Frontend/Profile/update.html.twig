{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Modifier
{% endblock %}

{% block body %}
		<section class="container">
			<h1 class="text-center">Modifier mes informations</h1>

			{{ form_start(form, {attr: {class: 'form-width' }}) }}

			{{ form_errors(form) }}
			<div class="form-group">
				{{ form_row(form.firstname) }}
			</div>
			<div class="form-group">
				{{ form_row(form.lastname) }}
			</div>
			<div class="form-label-input text-center">
				<button type="submit" class="button button-red">Modifier</button>
			</div>
			{{ form_end(form) }}
		</div>
		<div class="form-label-input text-center">
			<a href="{{ path('app_profile_index') }}" class="button button-red">Retour a mes informations</a>
		</div>
{% endblock %}