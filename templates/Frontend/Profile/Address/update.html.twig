{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Adresse
{% endblock %}

{% block body %}
		<section class="container">
			<h1 class="text-center">Modifier une adresse</h1>

			{{ form_start(form, {attr: {class: 'form-width' }}) }}

			{{ form_errors(form) }}
			<div class="form-group">
				{{ form_row(form.address) }}
			</div>
			<div class="form-group">
				{{ form_row(form.zip_code) }}
			</div>
            <div class="form-group">
				{{ form_row(form.city) }}
			</div>
			<div class="form-label-input text-center">
				<button type="submit" class="button button-red">Modifier</button>
			</div>
			{{ form_end(form) }}
		</div>
		<div class="form-label-input text-center">
			<a href="{{ path('app_profile_address_index') }}" class="button button-red">Retour aux adresses</a>
		</div>
{% endblock %}