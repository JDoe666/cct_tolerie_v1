{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	Laisser un avis
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="text-center">Laisser un avis</h1>
		{{ form_start(form, {attr: {class: 'form-width'}}) }}

		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_row(form.firstname) }}
		</div>
		<div class="form-group">
			{{ form_row(form.lastname) }}
		</div>
		<div class="form-group">
			{{ form_row(form.comment) }}
		</div>
		<div class="form-group">
			{{ form_row(form.note) }}
			<div class="flex align-center" {{stimulus_controller('stars')}}>
				<div class="notes">
					<span>☆</span>
					<span>☆</span>
					<span>☆</span>
					<span>☆</span>
					<span>☆</span>
				</div>
			</div>
		</div>
		<div class="form-label-input text-center">
			<button type="submit" path="{{ path('app_app') }}" class="button button-red">Commenter</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
