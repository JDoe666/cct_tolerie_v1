{% extends 'Backend/base.html.twig' %}

{% block title %}
	{{ parent() }}
	Modifier
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container">
		<h1 class="text-center">Modifier un utilisateur</h1>

		{{ form_start(form, {attr: {class: 'form-width form-margin-bottom-admin' }}) }}

		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_row(form.firstname) }}
		</div>
		<div class="form-group">
			{{ form_row(form.lastname) }}
		</div>
		<div class="form-group">
			{{ form_row(form.email) }}
		</div>
		<div class="form-group">
			{{ form_row(form.roles)}}
		</div>
		<div class="form-label-input text-center">
			<button type="submit" class="button button-red">Modifier</button>
		</div>
		{{ form_end(form) }}
	</div>
	<div class="form-label-input text-center">
			<a href="{{ path('admin_users_index') }}" class="button button-red">Retour aux cat√©gories</a>
		</div>

{% endblock %}
