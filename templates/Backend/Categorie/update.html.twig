{% extends 'Backend/base.html.twig' %}

{% block title %}
	{{ parent() }}
	Modifier
{% endblock %}

{% block body %}
		<div class="container">
			<h1 class="text-center">Modifier une catégorie</h1>

			{{ form_start(form, {attr: {class: 'form-width form-margin-bottom-admin' }}) }}

			{{ form_errors(form) }}
			<div class="form-group">
				{{ form_row(form.name) }}
			</div>
			<div class="form-group">
				{{ form_row(form.description) }}
			</div>
			<div class="form-group">
				{{ form_row(form.imageFile, {attr: {"data-controller": "previewImage"}}) }}
			</div>
			<div class="form-label-input text-center">
				<button type="submit" class="button button-update">Modifier</button>
			</div>
			{{ form_end(form) }}
		</div>
		<div class="form-label-input text-center">
			<a href="{{ path('admin_categories_index') }}" class="button button-return">Retour aux catégories</a>
		</div>
{% endblock %}